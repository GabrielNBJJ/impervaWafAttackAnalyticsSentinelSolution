      {
        "type": 3,
        "content": {
          "version": "KqlItem/1.0",
          "query": "ImpervaWAFAttackAnalytics_CL\r\n| extend ip_list = split(cs5_s, \",\")\r\n| mv-expand ip_list to typeof(string)\r\n| extend GeoInfo = parse_json(geo_info_from_ip_address(ip_list))\r\n| evaluate bag_unpack(GeoInfo)\r\n| extend Country = tostring(country), IP = tostring(ip_list), Lat = todouble(latitude), Long = todouble(longitude)\r\n| summarize CountByIP = count() by IP, Country, Lat, Long\r\n| summarize CountByCountry = sum(CountByIP) by Country, Lat, Long\r\n| project Country, Lat, Long, CountByCountry\r\n",
          "size": 0,
          "title": "Originating Attacks by Geolocation",
          "timeContextFromParameter": "Timerange",
          "queryType": 0,
          "resourceType": "microsoft.operationalinsights/workspaces",
          "visualization": "map",
          "mapSettings": {
            "locInfo": "CountryRegion",
            "locInfoColumn": "Country",
            "latitude": "Lat",
            "longitude": "Long",
            "sizeSettings": "CountByCountry",
            "sizeAggregation": "Count",
            "legendMetric": "latitude",
            "legendAggregation": "Sum",
            "itemColorSettings": {
              "nodeColorField": "CountByCountry",
              "colorAggregation": "Sum",
              "type": "heatmap",
              "heatmapPalette": "yellowOrangeRed"
            },
            "numberFormatSettings": {
              "unit": 0,
              "options": {
                "style": "decimal"
              }
            }
          }
        },
        "customWidth": "50",
        "name": "Originating Attacks by Geolocation"
      },
      {
        "type": 3,
        "content": {
          "version": "KqlItem/1.0",
          "query": "ImpervaWAFAttackAnalytics_CL\r\n| extend Timestamp = todatetime(TimeGenerated) // Replace with your actual timestamp field\r\n| extend Severity = tostring(Severity_s)\r\n| summarize Count = count() by bin(Timestamp, 1h), Severity // Aggregates data in 1-hour bins\r\n| order by Severity asc, Timestamp asc // Sorts first by severity then time\r\n| render timechart",
          "size": 0,
          "title": "Attacks over time by severity",
          "timeContextFromParameter": "Timerange",
          "queryType": 0,
          "resourceType": "microsoft.operationalinsights/workspaces"
        },
        "customWidth": "50",
        "name": "Attacks over time by severity"
      },
      {
        "type": 3,
        "content": {
          "version": "KqlItem/1.0",
          "query": "ImpervaWAFAttackAnalytics_CL \r\n| extend ip_list = split(cs5_s, \",\")\r\n| mv-expand ip_list to typeof(string)\r\n| summarize Count = count() by ip_list\r\n| order by Count desc",
          "size": 0,
          "title": "Top offending IPs",
          "timeContextFromParameter": "Timerange",
          "queryType": 0,
          "resourceType": "microsoft.operationalinsights/workspaces"
        },
        "customWidth": "25",
        "name": "Top offending IPs"
      },
      {
        "type": 3,
        "content": {
          "version": "KqlItem/1.0",
          "query": "ImpervaWAFAttackAnalytics_CL\r\n| where cs2_s != \"100\" and cs2_s != \"\"\r\n| extend endpoint = request_s, attack_type = cs7_s, percent_blocked = cs2_s, severity = Severity_s\r\n| project endpoint, attack_type,severity, percent_blocked",
          "size": 0,
          "title": "Unmitigated Attacks",
          "timeContextFromParameter": "Timerange",
          "queryType": 0,
          "resourceType": "microsoft.operationalinsights/workspaces"
        },
        "customWidth": "75",
        "name": "Unmitigated Attacks"
